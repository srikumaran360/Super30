<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/signup.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.4.1/chart.js" integrity="sha512-lUsN5TEogpe12qeV8NF4cxlJJatTZ12jnx9WXkFXOy7yFbuHwYRTjmctvwbRIuZPhv+lpvy7Cm9o8T9e+9pTrg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <title>Progress</title>
</head>
<body>
    <div class="container">
        <canvas id="myChart" width="400" height="400"></canvas>
    </div>
    <script>
       let array = "<%= value%>";
       console.log(array);
       let date = "<%= date%>";
    //    let date_array = JSON.parse(date);
    //    date_array.forEach(element => {
    //     console.log(element);
    //    });
    //    console.log(date_array);
        var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: date.split(","),
        datasets: [{
            label: 'Marks',
            data: array.split(","),
            backgroundColor: [
                'green',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'green',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        responsive:false,
        scales: {
            yAxes: [{
                    ticks: {
                        fontColor: "white",
                        fontSize: 18,
                        stepSize: 1,
                        beginAtZero: true,
                        max:100
                    }
                }],
                xAxes: [{
                    ticks: {
                        fontColor: "orange",
                        fontSize: 14,
                        stepSize: 1,
                        beginAtZero: true
                    }
                }]
        }
    }
});
    </script>
</body>
</html>